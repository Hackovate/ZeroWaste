// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  passwordHash        String
  name                String
  role                String   @default("user") // 'user' | 'admin'
  householdSize       Int      @default(1)
  dietaryPreferences  String[] // Array of dietary preferences
  budgetPreference    String?  // low, medium, high, premium
  monthlyBudget       Float?
  district            String?
  division            String?
  imageUrl            String?
  onboardingCompleted Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  inventory InventoryItem[]
  foodLogs  FoodLog[]
  familyMembers FamilyMember[]
  helpRequests HelpRequest[]
  donations Donation[]
  reports HelpRequestReport[]

  @@index([email])
}

model FamilyMember {
  id              String   @id @default(cuid())
  name            String
  age             Int?
  gender          String?  // male, female, other, prefer-not-to-say
  healthConditions String[] // Array of health conditions
  imageUrl        String?
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}

model InventoryItem {
  id                 String   @id @default(cuid())
  name               String
  category           String // dairy, grain, fruit, vegetable, protein, oil
  quantity           Float
  unit               String // kg, gm, ltr, pcs
  expirationEstimate Int // days
  price              Float?
  imageUrl           String?
  dateAdded          DateTime @default(now())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
}

model FoodLog {
  id       String   @id @default(cuid())
  itemName String
  quantity Float
  unit     String // kg, gm, ltr, pcs
  category String
  date     DateTime @default(now())
  imageUrl String?
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
}

model Resource {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String // Waste Reduction, Meal Planning, Nutrition Tips, Budget Meal Tips, Recipes
  type        String // article, video, youtube, pdf, blog
  url         String?
  createdAt   DateTime @default(now())

  @@index([category])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model FoodDatabase {
  id                 String   @id @default(cuid())
  name               String
  category           String // dairy, grain, fruit, vegetable, protein, oil
  expirationEstimate Int // days (shelf life)
  imageUrl           String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([name])
  @@index([category])
  @@unique([name])
}

model HelpRequest {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String // food category or general
  quantity    Float?
  unit        String? // kg, gm, ltr, pcs
  district    String
  division    String
  contactName String
  contactEmail String?
  contactPhone String?
  neededBy    DateTime // date when help is needed
  status      String   @default("open") // open, fulfilled, closed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  donations   Donation[]
  reports     HelpRequestReport[]

  @@index([userId])
  @@index([district])
  @@index([division])
  @@index([status])
  @@index([neededBy])
}

model Donation {
  id            String   @id @default(cuid())
  helpRequestId String
  donorUserId   String
  message       String?
  quantity      Float?
  unit          String?
  contactInfo   String? // How donor wants to be contacted
  anonymous     Boolean  @default(false)
  createdAt     DateTime @default(now())
  
  helpRequest   HelpRequest @relation(fields: [helpRequestId], references: [id], onDelete: Cascade)
  donor         User        @relation(fields: [donorUserId], references: [id], onDelete: Cascade)

  @@index([helpRequestId])
  @@index([donorUserId])
}

model HelpRequestReport {
  id            String   @id @default(cuid())
  helpRequestId String
  reporterUserId String
  type          String // 'fraud' | 'trusted'
  reason        String?
  createdAt     DateTime @default(now())
  
  helpRequest   HelpRequest @relation(fields: [helpRequestId], references: [id], onDelete: Cascade)
  reporter      User        @relation(fields: [reporterUserId], references: [id], onDelete: Cascade)

  @@unique([helpRequestId, reporterUserId]) // One report per user per request
  @@index([helpRequestId])
  @@index([reporterUserId])
  @@index([type])
}
